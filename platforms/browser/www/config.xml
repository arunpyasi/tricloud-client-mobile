<?xml version='1.0' encoding='utf-8'?>
<widget id="com.github.tricloud" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TriCloud App</name>
    <description>
        TriCloud App for mobile devices
    </description>
    <author email="dev@cordova.apache.org" href="https://github.com/indrenicloud/tricloud-client-react">
        TriCloud Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
